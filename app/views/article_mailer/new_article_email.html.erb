 <body class="bg-light">
    <div class="container">
      <div class="card my-10">
        <div class="card-body">
          <table class="row text-teal-700 ">
            <th>
              <% if @article.user.photo.attached? %>
                <%= cl_image_tag @article.user.photo.key, transformation: { width: 100, height: 100, crop: "fill" }, class: "avatar", style: "border-radius: 50%;" %>
              <% else %>
                <%= image_tag "default-avatar-user-.jpg", class: "avatar", alt: "dropdown menu" %>
              <% end %>
            </th>
            <tbody>
              <tr>
                <td style="line-height: 24px; font-size: 16px; margin: 0; padding: 12px;"><%= @article.user.first_name %> / <%= @article.created_at.strftime("%d %B %Y") %></td>
              </tr>
            </tbody>
          </table>
          <h1 class="h3 mb-2"><%= @article.title %></h1>
          <hr>
          <div class="space-y-3">
            <p class="text-gray-700">
              <p><%= raw @article.rich_body %></p>
            </p>

          </div>
          <hr>
          <%= link_to 'Voir l\'article', article_url(@article), class: 'btn btn-primary', target: '_blank' %>
        </div>
      </div>
    </div>
  </body>
