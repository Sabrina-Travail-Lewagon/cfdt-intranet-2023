<!DOCTYPE html>
<html>
  <head>
    <title><%= DEFAULT_META['meta_title'] %></title>
    <meta name="description" content="<%= DEFAULT_META['meta_description'] %>">
    <meta name="referrer" content="strict-origin-when-cross-origin">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="manifest" href="<%= asset_path 'manifest.json' %>">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%= render 'shared/ios_pwa_links' %>
    <%= tinymce_assets %>
	    <script src="https://cdn.tiny.cloud/1/4xtli9n7fygv47gzz4oyw7nwd6porb60kf9q2nzbnm8p0kou/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
	    <script>
	      tinymce.init({
	        selector: '.tinymce',
	        height: 500,
	        menubar: false,
	        theme : "advanced",
	        plugins: [
	          'a11ychecker','advlist','advcode','advtable','autolink','checklist','export',
	          'lists','link','image','charmap','preview','anchor','searchreplace','visualblocks',
	          'powerpaste','fullscreen','formatpainter','insertdatetime','media','table','help','wordcount', 'cloudinaryimage'
	        ],
	        toolbar: 'undo redo | casechange blocks | bold italic backcolor | ' +
	          'alignleft aligncenter alignright alignjustify | ' +
	          'bullist numlist checklist outdent indent | removeformat | a11ycheck code table help' +
	          'image' + 'cloudinaryimage' +
	      });
	    </script>

  </head>

  <body><%= render "shared/navbar" %>
    <%= render "shared/breadcrumb" %>
    <%= render "shared/flashes" %>

    <%= yield %>
  </body>
</html>
