<div class="container mt-4">
  <div class="row">
    <h1>Modification de la catégorie</h1>
  </div>
  <div class="row">
    	<%= simple_form_for([:admin, @category]) do |f| %>
        <div class="mb-3">
          <%= f.label :nom, class:"form-label" %>
          <%= f.text_field :nom, class:"form-control" %>
        </div>
        <div class="mb-3">
        <p>Image actuelle :</p>
        <% if @category.image.attached? %>
          <div class="btn-home <%= @category.nom.parameterize %>" style="background-color: <%= @category.background_color %>;">
          <%= cl_image_tag @category.image.key, class: "img-fluid"%>
          <%# Ajoutez la classe 'img-fluid' ou toute autre classe CSS selon votre besoin %>
          </div>
        <% else %>
          <p>Pas d'image attachée</p>
        <% end %>
        </div>
        <div class="mb-3">
          <p class="form-label">Choisir une autre image</p>
          <%= f.file_field :image, class:"form-control" %>
        </div>
        <div class="mb-3">
          <%# Ajout d'un sélecteur de couleur %>
          <%= f.label :background_color, "Couleur de fond sur l'Accueil", class:"mt-3" %>
          <%= f.color_field :background_color %>
        </div>
        <%= link_to admin_categories_path, class: "btn btn-primary" do %>
          <i class="fas fa-arrow-left text-white"></i>
        <% end %>
        <%= f.submit "Modifier", {class: "btn btn-primary"} %>
        </p>
      <% end %>
  </div>
</div>
