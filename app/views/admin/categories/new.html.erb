<div class="container mt-4">
  <div class="row">
    <h2>Ajouter une catégorie</h2>
    <%= form_with model: [:admin, @category], local: true do |f| %>
      <%= f.label :nom %>
      <%= f.text_field :nom %>
      <%= f.file_field :image %>
      <%= f.submit "Créer", {class: "btn btn-primary"} %>
    <% end %>
    <div>
      <%= link_to admin_categories_path, class: "btn btn-primary" do %>
        <i class="fas fa-arrow-left"></i> Retour
      <% end %>
    </div>
  </div>
</div>
