<div class="container mt-4">
  <div class="row">
    <h2>Ajouter une catégorie</h2>
    <%= form_with model: [:admin, @category], local: true do |f| %>
      <div class="mb-3">
        <%= f.label :nom, class:"form-label" %>
        <%= f.text_field :nom, class:"form-control" %>
      </div>
      <div class="mb-3">
        <p class="form-label">Choisir une image</p>
        <%= f.file_field :image, class:"form-control" %>
      </div>
      <div class="mb-3">
        <!-- Ajout d'un sélecteur de couleur -->
        <%= f.label :background_color, "Couleur de fond sur l'Accueil", class:"mt-3" %>
        <%= f.color_field :background_color %>
      </div>
      <%= f.submit "Créer", {class: "btn btn-primary"} %>
    <% end %>
    <div class="mt-3">
      <%= link_to admin_categories_path, class: "btn btn-primary" do %>
        <i class="fas fa-arrow-left"></i> Retour
      <% end %>
    </div>
  </div>
</div>
