<div class="container mt-4">
  <div class="row">
    <h2>Ajouter une catégorie</h2>
    <%= simple_form_for [:admin, @category], local: true do |f| %>
      <%= f.input :nom, label: "Nom de la catégorie", required: true, input_html: { class: "form-control" } %>

      <div class="mb-3">
        <%= f.input :image, as: :file, label: "Choisir une image" %>
      </div>

      <%= f.input :background_color, as: :color, label: "Couleur de fond sur l'Accueil", input_html: { style: 'width: 100px;' } %>

      <%= f.button :submit, "Créer", class: "btn btn-primary" %>
    <% end %>

    <div class="mt-3">
      <%= link_to admin_categories_path, class: "btn btn-primary" do %>
        <i class="fas fa-arrow-left"></i> Retour
      <% end %>
    </div>
  </div>
</div>
