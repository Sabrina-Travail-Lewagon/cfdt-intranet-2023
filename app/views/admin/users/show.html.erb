<!-- app/views/admin/users/show.html.erb -->
<div class="container mt-4">
  <div class="row">
    <h1>Profil de l'utilisateur : <%= @user.first_name %> <%= @user.last_name %></h1>

    <div class="user-profile">
      <div class="user-info">
        <strong>Email:</strong> <%= @user.email %><br>
        <strong>Rôle:</strong> <%= @user.role %><br>
      </div>

      <% if @user.photo.attached? %>
        <div class="user-photo">
          <%= image_tag @user.photo, alt: "Photo de #{@user.first_name} #{@user.last_name}" %>
        </div>
      <% else %>
        <div class="no-photo">Pas de photo</div>
      <% end %>

      <div class="actions">
        <%= link_to 'Modifier', edit_admin_user_path(@user), class: 'btn btn-primary' %>
        <%= link_to 'Retour à la liste', admin_users_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
