<div class="container mt-4">
  <div class="row">
    <h2>Modifier mon compte</h2>

    <%= simple_form_for [@user], url: admin_user_path(@user), method: :patch do |f| %>

      <%= f.error_notification %>
      <div class="form-inputs">
      <%= f.input :first_name, label: 'PrÃ©nom', input_html: { class: "form-control" } %>

      <%= f.input :last_name, label: 'Nom', input_html: { class: "form-control" } %>

      <%= f.input :email, input_html: { class: "form-control" } %>
      <%= f.input :password, label: "Nouveau mot de passe",
                    hint: t('devise.registrations.edit.leave_blank_if_you_dont_want_to_change_it'),
                    required: false,
                    input_html: { autocomplete: "nouveau mot de passe" } %>
      <%= f.input :password_confirmation, label: "Confirmation du mot de passe",
                  required: false, input_html: { class: "form-control", autocomplete: "new-password" } %>

      <%= f.input :photo, label: "Photo", as: :file, input_html: { class: "form-control" } %>
      <div class="form-actions">
        <%= f.button :submit, "Modifier", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="actions my-4">
      <%= link_to 'Retour', admin_users_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
