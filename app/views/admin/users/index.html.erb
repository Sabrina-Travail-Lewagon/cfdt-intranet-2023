<!-- app/views/admin/users/index.html.erb -->
<div class="container">
  <div class="row">
    <h1>Liste des utilisateurs</h1>
    <table class="table">
      <thead>
        <tr>
          <th>Photo</th>
          <th>Prénom</th>
          <th>Nom</th>
          <th>Email</th>
          <th>Rôle</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <% if user.photo.attached? %>
                <%= image_tag user.photo.variant(resize: "50x50"), alt: "Photo de #{user.first_name} #{user.last_name}" %>
              <% else %>
                Pas de photo
              <% end %>
            </td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td>
              <%= link_to 'Voir', admin_user_path(user), class: 'btn btn-info btn-sm' %>
              <%= link_to 'Modifier', edit_admin_user_path(user), class: 'btn btn-primary btn-sm' %>
              <%= link_to 'Supprimer', admin_user_path(user), method: :delete, data: { confirm: 'Êtes-vous sûr?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="actions">
      <%= link_to 'Créer un nouvel utilisateur', new_admin_user_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>
