	<div class="container mt-4">
	  <div class="row">
	    <h2>Rédiger un article</h2>
	    <%= form_with model: @article, class: 'my-4' do |f| %>
	      <div class="form-group">
	        <%= f.label :Titre %>
	        <%= f.text_field :title, class: 'form-control' %>
	      </div>
	      <div class="form-group">
	        <%= f.label :categories %>
	        <%= f.collection_select :category_id, Category.all, :id, :nom, {}, { multiple: true, class: 'form-control' } %>
	      </div>
	      <div class="form-group">
	        <%= f.label :Contenu %>
	        <%= f.rich_text_area :rich_body, class: 'form-control' %>
	      </div>
	      <%= f.button "Réinitialiser", type: "reset", class: "btn btn-secondary mr-2" %>
	      <%= f.submit "Publier", {class: "btn btn-primary"} %>
	    <% end %>
	    <div class="mt-3">
	      <%= link_to articles_path, class: "btn btn-secondary" do %>
	        <i class="fas fa-arrow-left"></i> Retour
	      <% end %>
	    </div>
	    <div>
	  </div>
</div>
