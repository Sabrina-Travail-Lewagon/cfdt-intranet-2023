<div class="container mt-4">
	  <div class="row">
	    <h2>Rédiger un article</h2>
      <%= simple_form_for [:admin, @article], data: { turbo: false }, class: 'my-4' do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :title,
                      required: true,
                      autofocus: true,
                      label: "Titre" %>
          <%= f.input :category_id,
                      required: true,
                      autofocus: true,
                      collection: @categories,
                      label_method: :nom,
                      value_method: :id,
                      include_blank: 'Sélectionnez une catégorie',
                      label: "Catégories" %>
          <%= f.input :documents,
                      as: :file,
                      label: "Pièces jointes",
                      input_html: {
                        multiple: true,
                        direct_upload: true,
                        accept: 'application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document',
                        class: 'form-control'
                      }
          %>
          <%= f.input :rich_body, label: "Contenu de l'article", input_html: { class: 'form-control' } do %>
            <%= f.rich_text_area :rich_body, class: 'form-control' %>
          <% end %>

          <%= f.button :submit, "Publier", class: "btn btn-primary" %>
        </div>
      <% end %>

	    <div class="mt-3">
	      <%= link_to articles_path, class: "btn btn-secondary" do %>
	        <i class="fas fa-arrow-left"></i> Retour
	      <% end %>
	    </div>
	  </div>
</div>
