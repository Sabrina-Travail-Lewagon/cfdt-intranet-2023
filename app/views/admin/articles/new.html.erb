	<div class="container mt-4">
	  <div class="row">
	    <h2>Rédiger un article</h2>
	    <%= form_with model: [:admin, @article], data: { turbo: false }, class: 'my-4' do |f| %>
        <%# Notification des erreurs %>
        <% if @article.errors.any? %>
        <div class="alert alert-info error_explanation">
          <h2><%= pluralize(@article.errors.count, "erreur") %> interdit(s) cet article d'être enregistré :</h2>
          <ul>
          <% @article.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
        <% end %>

	      <div class="form-group">
	        <%= f.label :Titre %>
	        <%= f.text_field :title, class: 'form-control' %>
	      </div>
	      <div class="form-group">
	        <%= f.label :categories %>
            <%= f.collection_select :category_id, @categories, :id, :nom, {}, {class: 'form-select' } %>
	      </div>
        <div class="form-group">
	        <%= f.label :documents, "Pièces jointes", class: 'form-label' %>
	            <%= f.file_field :documents, multiple: true, direct_upload: true, accept: 'application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document', class: 'form-control' %>
	      </div>
	      <div class="form-group">
	        <%= f.label :Contenu %>
	        <%= f.rich_text_area :rich_body, class: 'form-control' %>
	      </div>
	      <%= f.button "Réinitialiser", type: "reset", class: "btn btn-secondary mr-2" %>
	      <%= f.submit "Publier", {class: "btn btn-primary"} %>
	    <% end %>
	    <div class="mt-3">
	      <%= link_to articles_path, class: "btn btn-secondary" do %>
	        <i class="fas fa-arrow-left"></i> Retour
	      <% end %>
	    </div>
	    <div>
	  </div>
</div>
